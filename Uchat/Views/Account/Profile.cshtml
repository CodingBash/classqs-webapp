@model Uchat.Models.ProfileViewModel

@{
	ViewBag.Title = "Profile";
}

<h2>Profile</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div class="row">
	<div class="col-md-12">
		@using (Html.BeginForm("Profile", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
		{
			@Html.AntiForgeryToken()
			<h4>Update Profile</h4>
			<hr />
			@Html.ValidationSummary()
			<div class="form-group">
				@Html.LabelFor(m => m.UserType, new { @class = "col-md-2 control-label" })
				@if (Model.IsTeacher)
				{
					@Html.RadioButtonFor(model => model.UserType, 0, new { id = "UserType_Teacher", @class = "control-radio", @checked = true })
				}
				else
				{
					@Html.RadioButtonFor(model => model.UserType, 0, new { id = "UserType_Teacher", @class = "control-radio" })
				}
				<label for="UserType_Teacher">Teacher</label>
				<span class="control-label">&nbsp;</span>
				@if (Model.IsAid)
				{
					@Html.RadioButtonFor(model => model.UserType, 1, new { id = "UserType_Aid", @class = "control-radio", @checked = true })
				}
				else
				{ 
					@Html.RadioButtonFor(model => model.UserType, 1, new { id = "UserType_Aid", @class = "control-radio" })
				}
				<label for="UserType_Aid">Aid</label>
				<span class="control-label">&nbsp;</span>
				@if (Model.IsStudent)
				{
					@Html.RadioButtonFor(model => model.UserType, 2, new { id = "UserType_Student", @class = "control-radio", @checked = true })					
				}
				else
				{
					@Html.RadioButtonFor(model => model.UserType, 2, new { id = "UserType_Student", @class = "control-radio" })
				}
				<label for="UserType_Student">Student</label>
			</div>
			<div class="form-group">
				<div class="col-md-offset-2 col-md-10">
					<input type="submit" class="btn btn-default btn-primary" value="Save" />
				</div>
			</div>
		}
	</div>
</div>
