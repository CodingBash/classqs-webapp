@model Uchat.Models.AddQuestionAnswerViewModel

@{
	ViewBag.Title = "Add Answer";
}

<h2>Add Answer</h2>

@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()

	<div class="form-horizontal">
		<h4>@Html.DisplayFor(model => model.QuestionText)</h4>
		<hr />
		@Html.ValidationSummary(true)
		@Html.HiddenFor(model => model.QuestionID)
		@Html.HiddenFor(model => model.AnswererID)
		@Html.HiddenFor(model => model.SessionID)

		<div class="form-group">
			@Html.LabelFor(model => model.Text, new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.Text)
				@Html.ValidationMessageFor(model => model.Text)
			</div>
		</div>

		<div class="form-group">
			<div class="col-md-offset-2 col-md-10">
				<input type="submit" value="Create" class="btn btn-default btn-primary" />
			</div>
		</div>
	</div>
}

<div>
	@Html.ActionLink("Back to Questions", "QuestionIndex", new { sessionId = Model.SessionID })
</div>
